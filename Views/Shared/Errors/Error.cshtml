@{
    Layout = null;
    var message = ViewData["ExceptionMessage"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Server Error</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-danger bg-opacity-10 d-flex align-items-center justify-content-center vh-100">
    <div class="text-center">
        <div class="display-1 text-danger fw-bold">500</div>
        <h1 class="fw-bold">Server Error</h1>
        <p class="lead text-muted">Something went wrong on our end. Please try again later.</p>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger mt-3 w-50 mx-auto">
                <strong>Error Detail:</strong> @message
            </div>
        }

        <a href="/" class="btn btn-danger mt-3">Return to Home</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
