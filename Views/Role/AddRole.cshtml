@model RoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-3">
            <div class="card-body p-4">
                <h1 class="text-center mb-4 text-primary">Add New Role</h1>

                <form asp-action="AddRole" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="RoleName" class="form-label fw-semibold">Role Name</label>
                        <input asp-for="RoleName" class="form-control" placeholder="Enter role name..." />
                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Add Role" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="text-decoration-none btn btn-secondary">← Back to List</a>
</div>