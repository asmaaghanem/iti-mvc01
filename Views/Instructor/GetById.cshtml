@model Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<h2>Instructor Details</h2>
<hr />

<div class="card mb-3 p-3">
    <h4 class="text-primary">@Model.Name</h4>
    <img src="~/images/@Model.ImageURL" alt="Instructor Image" class="img-thumbnail rounded-circle" style="max-width:200px;" />
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Salary:</strong> @Model.Salary</p> 
    <p><strong>Hire Date:</strong> @Model.HireDate.ToString("yyyy-MM-dd")</p> 
    <p><strong>Department:</strong> @Model.Department?.Name</p>
</div>

<hr />

<h4>Courses Taught (@(Model.InstructorCourses?.Count ?? 0))</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Topic</th>
            <th>Degree</th>
            <th>Minimum Degree</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ic in Model.InstructorCourses)
        {
            <tr>
                <td>@ic.Course.Name</td>
                <td>@ic.Course.Topic</td>
                <td>@ic.Course.Degree</td>
                <td>@ic.Course.MinDegree</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

